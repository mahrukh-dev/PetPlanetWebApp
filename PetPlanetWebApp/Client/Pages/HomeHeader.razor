@page "/home-header"
@using Microsoft.AspNetCore.Components.Web

<link href="css/HomeHeader.css" rel="stylesheet" />

<header class="header">
    <nav class="navbarr">
        <div id="navbar-logo" class="align-left">
            <a class="navbar-brand" href="/home-header">
                <img src="images/logoo.png" alt="" />  
            </a>
            <a href="/" class="name">Pet Planet<span>.</span></a>
        </div>
    </nav>
    <nav class="navbar">
        <a href="/home" class="menu-item">Home</a>
        <a href="/signup" class="menu-item">Create Account</a>
    </nav>

    <div class="custom_menu-btn">
        <button class="custom_menu-btn" @onclick="ToggleNav">
            <img src="images/menu.png" width="35" height="35" />
        </button>
    </div>

    <div id="myNav" style="@($"display: {(isNavVisible ? "table-column" : "none")}; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.8); color: #fff; text-align: center; z-index: 1;")">
        <img src="images/cross.png" class="cross-img" @onclick="ToggleNav" />

        <div class="overlay-content">
            <a href="/home">Home</a>
            <a href="/your-account">Your Account</a>
            <a href="/adopt-pet">Adopt a Pet</a>
            <a href="/about-us">About</a>
            <a href="/contact-us">Contact Us</a>
            <a href="/add-pet">Add Pet</a>
            <a href="/logout"> Logout</a>
        </div>
    </div>
</header>

@code {
    private bool isNavVisible = false;

    private void ToggleNav()
    {
        isNavVisible = !isNavVisible;
    }
    
}
